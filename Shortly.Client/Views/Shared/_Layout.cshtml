<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shortly.Client.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shrtly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area=""
                                   asp-controller="Home"
                                   asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area=""
                                   asp-controller="Url"
                                   asp-action="Index">All links</a>
                            </li>
                            @if (User.IsInRole(Role.Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-area=""
                                       asp-controller="Authentication"
                                       asp-action="Users">Users</a>
                                </li>
                            }
                        </ul>
                    }
                </div>

                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-outline-success my-2 my-sm-0 btn-login"
                       asp-controller="Authentication"
                       asp-action="Login">
                        Log in
                    </a>

                    <span id="spaceSpan"></span>

                    <a class="btn btn-outline-primary my-2 my-sm-0 btn-register"
                       asp-controller="Authentication"
                       asp-action="Register">
                        Register
                    </a>
                } else
                {
                    <form asp-controller="Authentication" asp-action="Logout" >
                        <button class="btn btn-outline-danger my-2 my-sm-0">
                            <i class="bi bi-box-arrow-in-right"></i> Log out <b>@User.Identity.Name</b>
                        </button>
                    </form>
                }

                
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-3 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <span class="mb-3 mb-md-0 text-muted">
                    <a class="text-muted" href="https://youtube.com/c/dotnethow">
                        Subcribe to my YouTube Channel
                    </a>
                </span>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
